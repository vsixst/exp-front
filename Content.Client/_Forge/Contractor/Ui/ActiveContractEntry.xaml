<BoxContainer xmlns="https://spacestation14.io"
              xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
              Margin="10 10 10 0"
              HorizontalExpand="True">
    <PanelContainer StyleClasses="AngleRect" HorizontalExpand="True">
        <BoxContainer Orientation="Vertical"
                      HorizontalExpand="True">
            <BoxContainer Orientation="Horizontal">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <BoxContainer Orientation="Horizontal">
                        <SpriteView Name="TargetPortrait" Scale="2 2" Margin="0 0 10 0"/>
                        <BoxContainer Orientation="Vertical">
                            <RichTextLabel Name="TargetNameLabel" StyleClasses="LabelBig"/>
                            <RichTextLabel Name="TargetJobLabel" StyleClasses="LabelSubText"/>
                        </BoxContainer>
                    </BoxContainer>
                    <RichTextLabel Name="RewardLabel" Margin="0 5 0 0"/>
                </BoxContainer>
                <Control MinWidth="10"/>
                <BoxContainer Orientation="Vertical" MinWidth="120">
                    <Button Name="CompleteButton"
                            Text="{Loc 'contracts-complete-button'}"
                            HorizontalExpand="False"
                            HorizontalAlignment="Right"/>
                </BoxContainer>
            </BoxContainer>

            <customControls:HSeparator Margin="5 10 5 10"/>

            <BoxContainer>
                <RichTextLabel Name="DescriptionLabel"/>
            </BoxContainer>

            <customControls:HSeparator Margin="5 10 5 10"/>

            <BoxContainer Orientation="Vertical" Margin="0 0 0 5">
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'contracts-evac-point'}" StyleClasses="LabelSubText"/>
                    <Label Name="EvacPointLabel" HorizontalExpand="True" HorizontalAlignment="Right"/>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'contracts-status'}" StyleClasses="LabelSubText"/>
                    <Label Name="StatusLabel" HorizontalExpand="True" HorizontalAlignment="Right"/>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'contracts-time-remaining'}" StyleClasses="LabelSubText"/>
                    <Label Name="TimeRemainingLabel" HorizontalExpand="True" HorizontalAlignment="Right"/>
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</BoxContainer>
